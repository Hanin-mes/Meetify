@{
    Layout = "~/Views/Home/_LayoutPublic.cshtml";
    ViewData["Title"] = "Home";
}
<!-- Local CSS files -->
<link href="~/css/bootstrap.css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/animate.min.css" rel="stylesheet" />
<link href="~/css/landingpage.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


<section class="hero">
    <div class="background-circles">
        <span></span>
        <span></span>
        <span></span>
    </div>
    @* <div class="hero-content text-start"> *@
    @*     <h1 id="animatedText">Plan.</h1> *@
    @*     <p>Meetify helps you schedule, organize, and track your meetings effortlessly.</p> *@
    @* </div> *@

    <div class="container d-flex align-items-center hero-content">
        <div class="text-area flex-grow-1 pe-5 text-start">
            <h1 id="animatedText">Plan.</h1>
            <p>Meetify helps you schedule, organize, and track your meetings effortlessly.</p>
        </div>
        <div class="icon-area" aria-hidden="true">
            <!-- Animated meeting icon -->
            <svg id="meetifyIcon"
                 width="120"
                 height="120"
                 viewBox="0 0 64 64"
                 fill="none"
                 xmlns="http://www.w3.org/2000/svg">
                <!-- Simplified calendar/clock icon for demo -->
                <rect x="8" y="12" width="48" height="40" rx="6" stroke="var(--caribbean-current)" stroke-width="4" />
                <line x1="20" y1="4" x2="20" y2="16" stroke="var(--caribbean-current)" stroke-width="4" />
                <line x1="44" y1="4" x2="44" y2="16" stroke="var(--caribbean-current)" stroke-width="4" />
                <circle cx="32" cy="32" r="12" stroke="var(--caribbean-current)" stroke-width="4" />
                <line id="clockHand" x1="32" y1="32" x2="32" y2="20" stroke="var(--atomic-tangerine)" stroke-width="3" stroke-linecap="round" />
            </svg>
        </div>
    </div>

</section>

<section id="info">
    <div class="info-card">
        <div class="info-icon" id="icon1">📅</div>
        <div class="info-title">Easy Scheduling</div>
        <div class="info-text">
            Book your meetings with just a few clicks and avoid double bookings.
        </div>
    </div>
    <div class="info-card">
        <div class="info-icon" id="icon2">⏰</div>
        <div class="info-title">Reminders</div>
        <div class="info-text">
            Stay on track with automatic meeting reminders and notifications.
        </div>
    </div>
    <div class="info-card">
        <div class="info-icon" id="icon3">🤝</div>
        <div class="info-title">Collaboration</div>
        <div class="info-text">
            Invite team members and collaborate seamlessly in real-time.
        </div>
    </div>
</section>

<section id="contact" class="py-5 text-center" style="background: var(--tiffany-blue); color: var(--caribbean-current);">
    <div class="container">
        <h2>Contact Us</h2>
        <p>Email: support@meetify.com | Phone: +123 456 7890</p>
    </div>
</section>

