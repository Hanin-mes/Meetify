
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Meetify - Smart Meeting & Booking</title>
        <!-- Local CSS files -->
        <link href="~/css/bootstrap.css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/animate.min.css" rel="stylesheet" />
        <link href="~/css/landingpage.css" rel="stylesheet" />

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Anime.js CDN -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>

        <!-- Google Fonts: Poppins -->
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

        <style>
            /* Paste all the CSS styles here from the <style> block in the full code */
            /* ... */
        </style>
    </head>
    <body>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="#">Meetify</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item"><a class="nav-link" href="#info">About</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                        <li class="nav-item">
                            <button class="btn btn-login" id="loginBtn">Login</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Modal Login (Place it here so it's accessible site-wide) -->
        <div class="modal fade"
             id="loginModal"
             tabindex="-1"
             aria-labelledby="loginModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content login-form">
                    <div class="modal-header border-0">
                        <h5 class="modal-title" id="loginModalLabel" style="color: var(--caribbean-current)">Login to Meetify</h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                                style="filter: invert(32%) sepia(94%) saturate(626%) hue-rotate(134deg) brightness(88%) contrast(87%);"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-floating mb-3">
                                <input type="email"
                                       class="form-control"
                                       id="floatingEmail"
                                       placeholder="name@example.com"
                                       required />
                                <label for="floatingEmail">Email address</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password"
                                       required />
                                <label for="floatingPassword">Password</label>
                            </div>
                            <button type="submit" class="btn btn-login w-100">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- This is where the page content (like Index) gets injected -->
        @RenderBody()

        <!-- Footer -->
        <footer>
            <div>&copy; 2025 Meetify. All Rights Reserved.</div>
        </footer>

        <!-- Bootstrap JS bundle -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <script>
            // Navbar color change on scroll
            window.addEventListener('scroll', () => {
              const navbar = document.querySelector('nav.navbar');
              if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
              } else {
                navbar.classList.remove('scrolled');
              }
            });

            // Trigger login modal on button click
            const loginBtn = document.getElementById('loginBtn');
            const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
            loginBtn.addEventListener('click', () => loginModal.show());

            // Animate icons using anime.js
            anime({
              targets: '#icon1',
              translateY: [0, -15, 0],
              duration: 3500,
              loop: true,
              easing: 'easeInOutSine'
            });

            anime({
              targets: '#icon2',
              translateX: [0, 15, 0],
              duration: 4000,
              loop: true,
              easing: 'easeInOutQuad'
            });

            anime({
              targets: '#icon3',
              scale: [1, 1.2, 1],
              duration: 3500,
              loop: true,
              easing: 'easeInOutSine'
            });
                    anime({
          targets: '#clockHand',
          rotate: [0, 360],
          transformOrigin: '32px 32px',
          duration: 4000,
          easing: 'linear',
          loop: true
        });
                const phrases = ['Plan.', 'Book.', 'Meet.', 'Succeed.'];
        let index = 0;
        const animatedText = document.getElementById('animatedText');

        function fadeOutIn() {
          anime({
            targets: animatedText,
            opacity: [1, 0],
            duration: 500,
            easing: 'easeInOutQuad',
            complete: () => {
              index = (index + 1) % phrases.length;
              animatedText.textContent = phrases[index];
              anime({
                targets: animatedText,
                opacity: [0, 1],
                duration: 500,
                easing: 'easeInOutQuad'
              });
            }
          });
        }

        setInterval(fadeOutIn, 3000);


        </script>

    </body>
</html>
