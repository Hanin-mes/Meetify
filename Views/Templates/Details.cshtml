@{
    Layout = "~/Views/Home/_LayoutPublic.cshtml";
}
<section class="u-detail">
    <div class="container d-grid detail-grid">
        <div class="detail-media">
            <img src="@Model.PreviewUrl" alt="@Model.Title preview" class="img-fluid rounded-3 shadow-sm">
        </div>
        <div class="detail-panel">
            <h1 class="h3">@Model.Title</h1>
            <p class="text-muted">@Model.Description</p>

            <div class="d-flex align-items-center gap-3 my-3">
                <label class="small text-muted">Accent color</label>
                <input type="color" class="form-control-color" value="@Request.Query["color"]" id="accentColor">
            </div>

            <div class="d-grid gap-2">
                <a class="btn btn-primary btn-lg" href="@Url.Action("Use", "Templates", new { slug = Model.Slug, color = Request.Query["color"] })">Use this template</a>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary w-100" href="@Url.Action("Export", "Templates", new { slug = Model.Slug, f="pdf", color = Request.Query["color"] })">Export PDF</a>
                    <a class="btn btn-outline-secondary w-100" href="@Url.Action("Export", "Templates", new { slug = Model.Slug, f="ics", color = Request.Query["color"] })">Export .ics</a>
                </div>
            </div>
        </div>
    </div>
</section>
